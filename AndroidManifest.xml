<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.vlabs.vlead"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.vlabs.vlead.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.FileManagementActivity"
            android:label="@string/title_activity_file_management" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.ExperimentListActivity"
            android:label="@string/title_activity_experiment_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.vlabs.vlead.TextEditorActivity"
            android:label="@string/title_activity_text_editor" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.FileContentActivity"
            android:label="@string/title_activity_file_content" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.ArchivalAndCompressionActivity"
            android:label="@string/title_activity_archival_and_compression" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.PipesAndRedirectionActivity"
            android:label="@string/title_activity_pipes_and_redirection" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.SearchingActivity"
            android:label="@string/title_activity_searching" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.BasicNetworkingActivity"
            android:label="@string/title_activity_basic_networking" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.FilePermissionsActivity"
            android:label="@string/title_activity_file_permissions" >
        </activity>
        <activity
            android:name="edu.vlabs.vlead.ObtainingSystemInformationActivity"
            android:label="@string/title_activity_obtaining_system_information" >
        </activity>
    </application>

</manifest>
